    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "rootDir": "./src",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "tests/**/*",
  ],
  "include": [
    "src/**/*.json",
    "src/**/*.ts",
  ]
}
